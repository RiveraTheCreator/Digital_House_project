<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>Registro</title>
       <!-- <script type="text/javascript" src="/scripts/registro.js"></script>-->
    </head>

    <body class="body-registro">
        <%- include('./partials/header') %>
        <main>
        <section class="registro">
            <h1>Crear Cuenta</h1>
            <div class="datos-personales">
                <h3>Datos Personales</h3>
            </div>
            <div class="form-registro">

            <form action="/usuarios/registrar" method="POST" enctype="multipart/form-data">
                    <p class="elt-reg">
                        <label for="firstName">Nombre (s):</label>
                        <br>
                        <input type="text" id="firstName" name="firstName" value="<%= locals.oldData ? oldData.firstName : null %>" class="firstName">
                        <% if (locals.errors && errors.firstName) { %>
                            <div style="color: red; text-align: center;"><%= errors.firstName.msg %> </div>
                        <% } %>
                    </p>
                    
                    <p class="elt-reg">
                        <label for="lastName">Apellidos:</label>
                        <br>
                        <input type="text" id="lastName" name="lastName" value="<%= locals.oldData ? oldData.lastName : null %>" class="lastName" >
                        <% if (locals.errors && errors.lastName) { %>
                            <div style="color: red; text-align: center;"><%= errors.lastName.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label for="email">e-mail:</label>
                        <br>
                        <input type="email" id="email" name="email" value="<%= locals.oldData ? oldData.email : null %>" class="email" required>
                        <% if (locals.errors && errors.email) { %>
                            <div style="color: red; text-align: center;"><%= errors.email.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label for="picture">Foto de usuario:</label>
                        <br>
                        <input type="file" id="picture" name="picture" class="picture" id="picture"  accept="image/png,image/jpeg,image/bmp,image/gif" >
                    </p>

                    <p class="elt-reg">
                        <label for="phone">Teléfono:</label>
                        <br>
                        <input type="tel" id="phone" name="phone" value="<%= locals.oldData ? oldData.phone : null %>" class="phone">
                        <% if (locals.errors && errors.phone) { %>
                            <div style="color: red; text-align: center;"><%= errors.phone.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label for="streetNumber">Calle y número:</label>
                        <br>
                        <input type="text" id="streetNumber" name="streetNumber" value="<%= locals.oldData ? oldData.streetNumber : null %>" class="streetNumber">
                        <% if (locals.errors && errors.streetNumber) { %>
                            <div style="color: red; text-align: center;"><%= errors.streetNumber.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label for="postalCode">Código postal:</label>
                        <br>
                        <input type="text" id="postalCode" name="postalCode" value="<%= locals.oldData ? oldData.postalCode : null %>" class="postalCode">
                        <% if (locals.errors && errors.postalCode) { %>
                            <div style="color: red;  text-align: center;"><%= errors.postalCode.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label>País:</label>
                        <br>
                        <% let countries = ['Mexico','Guatemala','Belice','Salvador','Honduras','Nicaragua','Panama','Ecuador','Colombia','Venezuela','Otro']; %> 
                        <select name="country" required> 
                            <% for (let country of countries){ %> 
                            <option value=<%= country %>><%= country  %> 
                            <% } %> 
                        </select>
                    </p>
                    
                    <p class="elt-reg">
                        <label for="password">Contraseña:</label>
                        <br>
                        <input type="password" id="password" name="password" class="password">
                        <% if (locals.errors && errors.password) { %>
                            <div style="color: red; text-align: center;"><%= errors.password.msg %> </div>
                        <% } %>
                    </p>

                    <p class="elt-reg">
                        <label for="confirmPass">Confirmar contraseña:</label>
                        <br>
                        <input type="password" id="confirmPass" name="confirmPass" class="password" >
                    </p>                    
                    <% if (locals.passValidate) { %>
                        <div style="color: red; text-align: center;"><%= passValidate %> </div>
                    <% } %>
                    <% if (locals.errors && errors.confirmPass) { %>
                        <div style="color: red; text-align: center;"><%= errors.confirmPass.msg %> </div>
                    <% } %>

                    <div class="errorsFront" style="color: red; text-align: center;">
                        <ul></ul>
                    </div>

                <div class="terminos">
                    <p>
                        <label>
                            <input type="radio" name="terminos" value="acepta-terminos" >
                            Acepto los términos y condiciones
                        </label>
                    </p>
                </div>
                <div class="botones-registro">
                    <button type="submit" class="botonSubmit">Enviar mis datos</button>
                </div>
            </form> 
        </div>
        </section>
        
    </main>
    <%- include('./partials/footer') %> 
    </body>


</html>