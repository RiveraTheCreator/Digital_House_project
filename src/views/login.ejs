<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <title>Animalandia</title>
</head>

<body>
    <%- include('./partials/header') %>

    <main>
        <h1>
            Login
        </h1>

        <div>
            <form method="GET" action="/">
            <!-- Campo para recopilar el correo del usuario-->  
                <p>
                    <label for="user"> Usuario:</label>
                </p>
                <p>
                    <input type="text" id="user" name="user" placeholder="email">
                </p>
            
            <!-- Campo para recopilar la contraseña del usuario-->
                <p>
                    <label for="password">Contraseña</label>
                </p>
                <p>
                    <input type="password" id="password" name="password">
                </p>

            <!-- CheckBox para recordarme-->
                <p>
                    <input type="checkbox" name="rememberMe" value="recuerdame">
                    <label for="rememberMe"> Recuérdame </label>
                </p>

                <p>
                    <button type="submit">Ingresar</button>
                    <button type="submit">Recuperar contraseña</button>
                </p>

            </form>
        </div>
    </main>

    <%- include('./partials/footer') %> 
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script> 
</body>
</html>
