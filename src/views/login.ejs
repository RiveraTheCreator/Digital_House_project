<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <title>Animalandia</title>
</head>

<body>
    <%- include('./partials/header') %>

    <main>
        <div class="login-title">
            <h1>Login</h1>
        </div>
        <div class="login">
            <form method="post" action="/usuarios/login">
                <p class="elt-login">
                    <label for="user"> Usuario:</label>
                </p>
                <p class="elt-login">
                    <input type="email" id="email" name="email" placeholder="email@locotes.com">
                </p>
                <% if (locals.errors && errors.email) { %>
                    <div style="color: red; text-align: center;"><%= errors.email.msg %> </div>
                <% } %>
                <p>
                    <label for="password">Contraseña</label>
                </p>
                <p class="elt-login">
                    <input type="password" id="password" name="password">
                </p>
                <% if (locals.errors && errors.password) { %>
                    <div style="color: red; text-align: center;"><%= errors.password.msg %> </div>
                <% } %>
                    <input type="checkbox" name="rememberMe" value="recuerdame">
                    <label for="rememberMe"> Recuérdame </label>
                <div class="botones-login">
                        <button type="submit">Ingresar</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('./partials/footer') %> 
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script> 
</body>
</html>
