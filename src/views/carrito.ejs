                <select name="talla">
                  <option value="xx-chico">xx-Chico</option>
                  <option value="x-chico">x-chico</option>
                  <option value="chico">Chico</option>
                  <option value="mediano">Mediano</option>
                  <option value="grande">Grande</option>
                </select>
                <div class="cantidad">
                  <input type="submit" value="-">
                  <input type="number" value="cantidad">
                  <input type="submit" value="+">
                </div>
                  <p class="precio">$325</p>
              </div>
            </article>

            <article class="producto">
              <img src="/images/producto_3.jpg" alt="Correa Good2Go Rosa Neon" class="img-producto">
              <div class="descripcion-producto">
                <p class="descripcion">Correa Acojinada Reflejante Rosa Neon Good2Go</p>
                <label class="talla">Talla:</label>
                <select name="talla">
                  <option value="xx-chico">xx-Chico</option>
                  <option value="x-chico">x-chico</option>
                  <option value="chico">Chico</option>
                  <option value="mediano">Mediano</option>
                  <option value="grande">Grande</option>
                  </select>
                <div class="cantidad">
                  <input type="submit" value="-">
                  <input type="number" value="cantidad">
                  <input type="submit" value="+">
                </div>
                <p class="precio">$439</p>
              </div>
            </article>
          </div>
        </section>

        <section class="seccion-resumen">
          <div class="resumen">
            <h3>Resumen de la compra</h3>
            <p class="direccion-envio">Calle Numero CP Ciudad</p>
            <p class="costo-envio">Gratis</p>
            <p class="total-envio">Total con env√≠o</p>
            <p class="total">$1263</p>
            <input type="submit" value="Comprar">
          </div>
        </section>
    </main>
    <%- include('./partials/footer') %> 
    </body>
</html>