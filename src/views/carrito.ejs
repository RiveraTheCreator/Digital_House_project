    <body>
        <%- include('./partials/header') %> 
    <main>
    <div class="carrito">
      <h2>Carrito</h2>
    </div>
        <section class="bolsa">
          <div class="articulos-bolsa">
            <article>
              <img src="/images/producto_1.jpg" alt="Chamarra negra Bad2Bone" class="img-producto">
              <div class="descripcion-producto">
