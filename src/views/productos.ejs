<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Todos los productos</title>
</head>

<body>
    <!--HEADER-->
    <%- include('./partials/header') %>

    <main>
        <div class="products-products">
            <% products.forEach(producto => { %>
            <article>
                <form action="/productos/<%= producto.product_id %> " method="get">
                <button type="submit">
                <img src="/images/products/<%= producto.image_p %>" alt="<%= producto.p_name %>" class="product-img">
                <div class="product-name">
                    <h2><%= producto.p_name %></h2>
                    <h4>$<%= toThousand(producto.price) %> MXN</h4>
                </div>
                </button>
                </form>
            </article>
            <% }) %>

        </div>

    </main>

    <!--FOOTER--> 
    <%- include('./partials/footer') %> 
</body>
</html>
